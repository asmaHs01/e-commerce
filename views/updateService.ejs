                <form action="/admin/adminservice/update" method="POST" enctype="multipart/form-data">
                    <h1 style="text-align: center;margin: 20px">Modifier service</h1>
                    <div class="form-group mb-3">
                        <label class="form-label">Nom service:</label>
                        <input type="text" class="form-control" name="nom_service" value="<%= serviceUpdate.nom_service %>">
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Description:</label>
                        <textarea class="form-control" rows="3" name="description"><%= serviceUpdate.description %></textarea>
                    </div>

                    <input type="hidden" name="serviceId" value="<%= serviceUpdate._id %>">

                    <div class="form-group mb-3">
                        <label class="form-label">MÃ©moire:</label>
                        <input type="number" class="form-control" name="prix" value="<%= serviceUpdate.prix %>">
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Capacite de stockage:</label>
                        <input type="text" class="form-control" name="capacite_stockage" value="<%= serviceUpdate.capacite_stockage %>">
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label">Bande passante publique:</label>
                        <textarea class="form-control" rows="3" name="disponibilite" placeholder="Bande passante publique"><%= serviceUpdate.disponibilite %></textarea>
                    </div>

                    <img src="/uploads/<%= serviceUpdate.image %>" alt="" height="100px">
                    <input type="hidden" name="oldImage" value="<%= serviceUpdate.image %>">

                    <button class="btn btn-primary m-3" style="background-color: #6f42c1; border-color:#6f42c1" type="submit">Modifier</button>
                </form>
            </div>
